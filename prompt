####################
# Sherlocks Prompt #
####################

setopt prompt_subst ## Enable prompt Substitution

## Load vcs_info module
autoload -Uz vcs_info

## Enable git tracking
zstyle ':vcs_info:*' enable git

## Set icons for Staged and Unstaged Changes
zstyle ':vcs_info:git*' stagedstr "%{%F{green%}%}ó°„³ %{%f%}"
zstyle ':vcs_info:git*' unstagedstr "%{%F{red%}%}ó°…™ %{%f%}"

## Enable check for changes (CPU-intensive)
## DISABLE THIS ON LOW POWER SYSTEMS
zstyle ':vcs_info:git*' check-for-changes true

## Set format for Repo Information
zstyle ':vcs_info:git*' formats "-(%{%F{203}%}îœ‚ %{%f%}%s:%{%F{2}%}îœ¥ %{%f%}%b %u%c)"
zstyle ':vcs_info:git*' actionformats "-(%{%F{203}%}îœ‚ %{%f%}%s:%{%F{2}%}îœ¥ %{%f%}%b %u%c)(%a)"

## do precmd stuff
_vcsinfo() {
	vcs_info
}
add-zsh-hook precmd _vcsinfo


